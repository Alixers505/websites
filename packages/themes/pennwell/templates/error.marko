$ const isDevelopment = process.env.NODE_ENV === 'development';
$ const error = input.error || {};

<theme-pennwell-document>
  <cms-page-container class="container-fluid-max">
    <div class="row">
      <div class="col">
        <h4>${input.statusCode} ${input.statusMessage}</h4>
        <h6>${error.message}</h6>
        <if(isDevelopment)>
          <pre>${error.stack}</pre>
        </if>
      </div>
    </div>
  </cms-page-container>
</theme-pennwell-document>
