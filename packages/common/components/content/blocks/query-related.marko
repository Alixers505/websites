import { getAsObject } from '@base-cms/object-path';
import contentListFragment from '../../../api/fragments/content-list';
import { useNativeX } from '../../../services/native-x';

$ const { site } = out.global;
$ const block = 'content-query-related';
$ const params = {
  limit: 5,
  ...input,
  queryFragment: contentListFragment,
};
$ const header = input.header || 'Related Content';
$ const nativeX = getAsObject(input, 'nativeX');
$ const nativeXEnabled = useNativeX(nativeX.placement, nativeX.index, site);

<cms-query-website-scheduled-content|{ nodes }| ...params>
  <if(nodes.length)>
    <div class=block>
      <endeavor-item-list flush=true card=true items=nodes>
        <if(header)>
          <@header>
            ${header}
          </@header>
        </if>
        <@item|{ item, index }|>
          <if(nativeXEnabled && index === nativeX.index)>
            $ const section = getAsObject(item, 'primarySection');
            $ const image = getAsObject(item, 'primaryImage');
            <endeavor-nativex-placement
              name=nativeX.placement
              fallback-vars={
                url: item.canonicalPath,
                content: { title: item.shortName, type: item.typeTitled, published: item.publishedDate },
                image: { src: image.src, alt: image.alt },
                section: { name: section.name },
              }
            />
          </if>
          <else>
            <endeavor-content-block-item
              content=item
              image-position="right"
              image-options={ w: 120, h: 120, fit: 'crop', crop: 'focalpoint', fpX: 0.5, fpY: 0.5 }
              image-width=75
              image-height=75
            />
          </else>
        </@item>
      </endeavor-item-list>
    </div>
  </if>
</cms-query-website-scheduled-content>
