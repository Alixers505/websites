import { getAsArray } from '@base-cms/object-path';

$ const block = 'page-body-images';
$ const images = getAsArray(input, 'images');

<if(images.length)>
  <div class=block>
    <for|image, index| of=images>
      <div class=`${block}__item`>
        <cms-text-element tag="h6" class=`${block}__title` field="displayName" obj=image />
        <endeavor-page-body-image image=image />
      </div>
    </for>
  </div>
</if>
