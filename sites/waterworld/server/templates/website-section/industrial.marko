import { getAsObject } from '@base-cms/object-path';
import getAdUnit from '@endeavorb2b/base-website-common/utils/gam/get-adunit';

$ const section = getAsObject(data, 'section');
$ const { site } = out.global;
$ const sections = site.getAsArray('homeSections');
$ const adSlots = {
  'gpt-ad-lb1': getAdUnit(site, { name: 'lb1', section }),
  'gpt-ad-rail1': getAdUnit(site, { name: 'rail-flex', section, size: [300, 250] }),
  'gpt-ad-rail2': getAdUnit(site, { name: 'rail1', section, size: [300, 250] }),
  'gpt-ad-rail3': getAdUnit(site, { name: 'rail2', section, size: [300, 600] }),
  'gpt-ad-rail4': getAdUnit(site, { name: 'load-more', section, size: [300, 250] }),
};

<theme-pennwell-website-section-layout section=section>
  <@head>
    <cms-ad-gam-head slots=adSlots />
  </@head>

  <@above-container>
    <endeavor-gam-ad-unit-display id="gpt-ad-lb1" modifiers=["top-of-page"] />
  </@above-container>

  <endeavor-content-query-hero
    section-id=section.id
    limit=5
    requires-image=true
  />

  <div class="row">
    <div class="col-lg-8">
      <div class="mb-block">
        <endeavor-content-query-section-list horizontal=true section-alias="industrial/process-water" header="Process Water" />
      </div>
      <div class="row">
        <div class="col-lg-6 mb-block">
          <endeavor-content-query-section-list limit=4 section-alias="industrial/wastewater" header="Wastewater" />
        </div>
        <div class="col-lg-6 mb-block">
          <endeavor-content-query-section-list limit=4 section-alias="industrial/water-reuse" header="Water Reuse" />
        </div>
      </div>
    </div>
    <div class="col-lg-4 ad-rail">
      <endeavor-gam-ad-unit-display id="gpt-ad-rail1" />
      <endeavor-gam-ad-unit-display id="gpt-ad-rail2" />
      <endeavor-gam-ad-unit-display id="gpt-ad-content3" />
      <endeavor-gam-ad-unit-display id="gpt-ad-content4" />
    </div>
  </div>

  <@below-container>
    <endeavor-content-query-load-more
      skip=15
      section-id=section.id
      section=section
    />
  </@below-container>

</theme-pennwell-website-section-layout>
